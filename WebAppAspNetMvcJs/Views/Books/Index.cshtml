@using WebAppAspNetMvcJs.Models
@model List<Book>
@{
    string controllerName = "Books";
}

<h3>Книги</h3>

<button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal-@controllerName" onclick="GetCreate()">Добавить запись</button>

<table class="table table-hover table-bordered align-middle">
    <thead>
        <tr class="align-middle">
            <th>
                Обложка
            </th>
            <th>
                Название
            </th>
            <th>
                Автор(ы)
            </th>
            <th>
                ISBN
            </th>
            <th>
                Год издания книги
            </th>
            <th>
                Дата создания записи
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entity in Model)
        {
            <tr>
                <td>
                    <img src="/@controllerName/GetImage/@entity.Id" style="max-width: 100px; max-height: 200px;" />
                </td>
                <td>
                    <a href="/@controllerName/Detail/@entity.Id" class="text-decoration-none">@entity.Name</a>
                </td>
                <td>
                    @string.Join(", ", entity.Authors.Select(x => $"{x.LastName} {x.FirestName}"))
                </td>
                <td>
                    @entity.Isbn
                </td>
                <td>
                    @entity.Year
                </td>
                <td>
                    @entity.CreateAt.ToString("dd-MM-yyyy HH:mm:ss")
                </td>
                <td class="grid-cell-action">
                    <div class="btn-group mb-3">
                        <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#modal-@controllerName" onclick="GetEdit(@entity.Id)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                            </svg>
                        </button>
                        <a href="/@controllerName/Delete/@entity.Id" class="btn btn-outline-secondary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"></path>
                            </svg>
                        </a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>




<div class="modal fade" id="modal-@controllerName" data-bs-backdrop="static" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="/@controllerName/Index" class="btn-close"></a>
            </div>
            <div class="modal-body" id="modal-body-@controllerName">
                @if (ViewBag.Create != null)
                {
                    @Scripts.Render("~/bundles/bootstrap")
                    @Html.Partial("Create", (Book)ViewBag.Create)
                    <script>
                        new bootstrap.Modal(document.getElementById('modal-@controllerName')).show();
                    </script>
                }

                @if (ViewBag.Edit != null)
                {
                    @Scripts.Render("~/bundles/bootstrap")
                    @Html.Partial("Edit", (Book)ViewBag.Edit)
                    <script>
                        new bootstrap.Modal(document.getElementById('modal-@controllerName')).show();
                    </script>
                }
            </div>
        </div>
    </div>
</div>


<script>
    function GetCreate() {
        var x = new XMLHttpRequest();
        x.open("GET", "/Books/Create/");
        x.onload = function () {
            var bodyModal = document.getElementById("modal-body-@controllerName");
            bodyModal.innerHTML = x.responseText;
        }
        x.send(null);
    }

    function PostCreate() {
        var x = new XMLHttpRequest();

        var form = document.querySelector('form');
        var data = new FormData(form);
        x.open("POST", "/Books/Create/");
        x.setRequestHeader('Content-Type', 'multipart/form-data');
        x.send(data);
    }


     function GetEdit(id) {
        var x = new XMLHttpRequest();
        x.open("GET", "/Books/Edit?id=" + id);
        x.onload = function () {
            var bodyModal = document.getElementById("modal-body-@controllerName");
            bodyModal.innerHTML = x.responseText;
        }
        x.send(null);
    }

    function PostEdit() {
        var x = new XMLHttpRequest();

        var form = document.querySelector('form');
        var data = new FormData(form);
        x.open("POST", "/Books/Edit/");
        x.setRequestHeader('Content-Type', 'multipart/form-data');
        x.send(data);
    }

</script>


